{% extends 'base.html.twig' %}

{% block title %}Avis
{% endblock %}

{% block body %}
	<h1>Avis</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ avi.id }}</td>
			</tr>
			<tr>
				<th>Message</th>
				<td>{{ avi.message }}</td>
			</tr>
			<tr>
				<th>Rating</th>
				<td>{{ avi.rating }}</td>
